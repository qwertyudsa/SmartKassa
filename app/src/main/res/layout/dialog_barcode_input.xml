<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите штрих-код"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Поле ввода штрих-кода -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxStrokeColor="@color/primary"
        app:boxBackgroundColor="@color/surface"
        app:startIconDrawable="@drawable/ic_barcode"
        app:startIconTint="@color/secondary"
        app:endIconMode="clear_text"
        app:endIconTint="@color/secondary"
        app:helperText="Введите 13 цифр EAN-13"
        app:helperTextTextColor="@color/text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Штрих-код"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="13" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Или выберите -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Или выберите товар:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp" />

    <!-- Быстрые товары -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuickProduct1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Вода"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:backgroundTint="@color/surface"
            app:cornerRadius="8dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:elevation="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuickProduct2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Хлеб"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:backgroundTint="@color/surface"
            app:cornerRadius="8dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:elevation="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuickProduct3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Молоко"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:backgroundTint="@color/surface"
            app:cornerRadius="8dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:elevation="0dp" />

    </LinearLayout>

    <!-- Результат поиска -->
    <TextView
        android:id="@+id/tvSearchResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone" />

    <!-- Кнопка сканирования (если есть камера) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сканировать камерой"
        android:textColor="@color/primary"
        android:backgroundTint="@color/surface"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_camera"
        app:iconTint="@color/primary"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp"
        app:elevation="0dp"
        android:layout_marginTop="8dp" />

</LinearLayout>