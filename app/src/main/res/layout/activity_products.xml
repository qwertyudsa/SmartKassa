<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="Товары"
        app:titleTextColor="@color/surface"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/surface"
        app:menu="@menu/products_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Поиск и фильтры -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="0.5dp"
            app:cardBackgroundColor="@color/surface"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="@color/primary"
                    app:boxBackgroundColor="@color/surface"
                    app:startIconDrawable="@drawable/ic_search"
                    app:startIconTint="@color/secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Поиск товаров"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Фильтр"
                        android:textColor="@color/primary"
                        android:backgroundTint="@color/surface"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_filter"
                        app:iconTint="@color/primary"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp"
                        app:elevation="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSort"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Сортировка"
                        android:textColor="@color/primary"
                        android:backgroundTint="@color/surface"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_sort"
                        app:iconTint="@color/primary"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp"
                        app:elevation="0dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Список товаров -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProducts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:clipToPadding="false" />

        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Товары не найдены\n\nНажмите + чтобы добавить первый товар"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp" />

        <!-- Кнопка добавления товара -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/primary"
            app:tint="@color/surface" />

    </LinearLayout>

</LinearLayout>