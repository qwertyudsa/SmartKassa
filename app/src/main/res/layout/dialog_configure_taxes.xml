<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxStrokeColor="@color/primary"
        app:boxBackgroundColor="@color/surface"
        app:startIconDrawable="@drawable/ic_tax"
        app:startIconTint="@color/secondary"
        app:suffixText="%"
        app:suffixTextColor="@color/text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTaxRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ставка НДС"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:inputType="numberDecimal"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите ставку налога в процентах (например: 20)"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp" />

</LinearLayout>